{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug upside (CPU)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/obj/upside",
            "args": [
                "--duration", "1000",
                "--frame-interval", "50",
                "--temperature", "0.8",
                "--seed", "1",
                "${workspaceFolder}/example/01.GettingStarted/outputs/simple_test/chig.run.up"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake Build",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "debug upside (CUDA)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/obj/upside",
            "args": [
                "--duration", "1000",
                "--frame-interval", "50",
                "--temperature", "0.8",
                "--seed", "1",
                "${workspaceFolder}/example/01.GettingStarted/outputs/simple_test/chig.run.up"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set CUDA focus to device",
                    "text": "set cuda break_on_launch application",
                    "ignoreFailures": true
                },
                {
                    "description": "Enable CUDA debugging",
                    "text": "set cuda memcheck on",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake Build CUDA Debug",
            "miDebuggerPath": "/usr/local/cuda/bin/cuda-gdb"
        },
    ]
}
